{
  "name": "obsidian-prompt-flow",
  "description": "Local AI content generation for Obsidian with Ollama. Features custom prompts, content filtering, link expansion, continuous conversations, and extensible filter API.",
  "main": "main.js",
  "version": "0.6.3",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "fix": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format ./src",
    "eslint": "npx eslint",
    "lint": "npx @biomejs/biome lint ./src",
    "test:ollama": "vitest run tests/ollama-integration.test.ts",
    "prebuild": "npx @biomejs/biome check ./src",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "preversion": "npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-prompt-flow",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/codemirror": "5.60.17",
    "@types/node": "^24.9.2",
    "@typescript-eslint/parser": "^8.46.4",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^5.0.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.39.1",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "globals": "^16.5.0",
    "moment": "^2.30.1",
    "obsidian": "^1.11.0",
    "tslib": "^2.8.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language",
    "eventsource-parser": "^3.0.6",
    "ollama": "^0.6.3"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*",
    "replaceText": {
      "([;.,] [rR]esolves) #\\d+\\.?\\s*$": "$1",
      "([;.,] [Ff]ixes) #\\d+\\.?\\s*$": "$1"
    }
  }
}
